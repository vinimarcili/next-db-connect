# Oracle Cloud Database Configuration

# Método 1: TCP Connection (menos seguro, requer configuração de IP no Oracle Cloud)
ORACLE_HOST=your_host_here
ORACLE_PORT=1522
ORACLE_USER="your_username_here"
ORACLE_PASSWORD="your_password_here"
ORACLE_SERVICE_NAME=your_service_name_here
ORACLE_SSL=true
ORACLE_RETRY_COUNT=20
ORACLE_RETRY_DELAY=3

# Método 2: mTLS com Wallet (RECOMENDADO - mais seguro)
# Baixe o wallet no Oracle Cloud Console -> DB Connection -> Download Wallet
ORACLE_CONNECTION_STRING="nome_do_servico_no_tnsnames"
ORACLE_WALLET_PASSWORD="senha_que_voce_criou_para_o_wallet"

# Arquivos do wallet convertidos para Base64
# Execute: base64 -w 0 cwallet.sso (Linux/Mac) ou [Convert]::ToBase64String([IO.File]::ReadAllBytes("cwallet.sso")) (Windows PowerShell)
ORACLE_CWALLET_SSO_B64="conteudo_base64_do_cwallet_sso"
ORACLE_EWALLET_P12_B64="conteudo_base64_do_ewallet_p12"  
ORACLE_TNSNAMES_B64="conteudo_base64_do_tnsnames_ora"
ORACLE_SQLNET_B64="conteudo_base64_do_sqlnet_ora"

# Configurações de Pool de Conexão
ORACLE_POOL_MIN=1
ORACLE_POOL_MAX=10
ORACLE_POOL_INCREMENT=1
ORACLE_CONNECT_TIMEOUT=60000
ORACLE_POOL_TIMEOUT=60000

# Next SELF URL
NEXT_PUBLIC_API_URL=http://localhost:3000

# Admin Credentials for CSV Download
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure_password_here
